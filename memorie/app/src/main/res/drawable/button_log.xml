<!-- rounded_edittext_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners android:radius="20dp" /> <!-- Adjust the radius based on your preference -->
            <solid android:color="@color/branco_sujo" /> <!-- Set the background color -->
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="20dp" /> <!-- Adjust the radius based on your preference -->
            <stroke
