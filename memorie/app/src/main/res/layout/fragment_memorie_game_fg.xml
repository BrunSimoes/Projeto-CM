                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:src="@drawable/carta_fundo" />

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="wrap_content"
